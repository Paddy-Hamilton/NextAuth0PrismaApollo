{
  "compilerOptions": {
    "baseUrl": ".",
    // "paths": {
    // 	"~/*": ["./src/common/*"]
    // },
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2017",
      "es2018"
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "env.config.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
